extends ../layout/common.pug
block content

	h1 Login
	if errors
		each error in errors
			.alert.alert-danger=error
	form(method="POST")
		.form-group
			label(for="email") Email
			input#name(name="email", type="text", class="form-control", value= values ? values.email : '')
		
		.form-group
			label(for="password") Password
			input#phone(name="password", type="password", class="form-control", value=values ? values.password : '')
		button.btn.btn-primary Login
	a.btn.btn-light(href="/users/register") Register

		

