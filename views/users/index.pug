extends ../layout/common.pug
block content
		h1
			span User
			div
				a.btn.btn-primary(href="/users/create") Create User

		form(action="/users/search", method="GET", class="d-flex")
			input(type='text', name="q")
			span &nbsp;
			button.btn.btn-primary Search
		table.table
			tr
				th Name
				th Phone
				th Action
			each user in users
				tr
					td= user.name
					td= user.phone
					td
						a.btn.btn-light(href="/users/"+user.id) View